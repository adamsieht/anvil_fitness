# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
# SQLite is used by default, configure here if using PostgreSQL/MySQL

# Email Configuration (Optional)
